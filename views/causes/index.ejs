<body>
  <h1>The title is <%= title %></h1>

  <form action = "/causes" method="POST">
    <div>
      <label for ="name">Name of Cause</label>
      <input type="text" name="name" id="name"></input>
    </div>
    <div>
      <label for ="description">Description</label>
      <input type="text" name="description" id="description"></input>
    </div>
    <button type="submit">here we go</button>
  </form>
  <h2> and the database says I worry a lot about: </h2>
  <% if (!causes.length) { %>
    <h2>No causes here yet</h2>
<% } else { %>
    <% causes.forEach(cause => { %>
        <li><%= cause.name %> : <%= cause.description %></li>
    <% }) %>
    <% } %>
</body>
